{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Käännä h3a.exe",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "*.cpp",
                "-o",
                "h3a.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Kääntää kaikki .cpp-tiedostot → h3a.exe"
        }
    ]
}